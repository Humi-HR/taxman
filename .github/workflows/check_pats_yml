name: Check PAT OAuth Scopes

on:
  pull_request:

jobs:
  check-permissions:
    runs-on: ubuntu-latest

    steps:
      - name: Check 1
        run: |
          curl -i -H "Authorization: token ${{ secrets.ELLIOTS_TAXMAN_TOKEN }}" https://api.github.com/user
          
      - name: Check 2
        run: |
          curl -i -H "Authorization: token ${{ secrets.HUMI_CI_TOKEN }}" https://api.github.com/user

